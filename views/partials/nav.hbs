
{{#if users.entity}}
  <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
  {{!-- <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-right mr-sm-2"> --}}
    {{!-- <img class="img-profile" style=" width:50px; height: 50px; margin:0 20px 0 20px;" src="/imagenes/favicon.png"> --}}
    <a class="navbar-brand" href="/center">{{users.nickname}}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse navbar-right " id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item active my-2 my-sm-0">
          <a class="nav-link" href="/logout">Logout <span class="sr-only">(current)</span></a>
        </li>
      </ul>
    </div>
    <li class="nav-item dropdown no-arrow mx-1" style="list-style:none;">
    <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fas fa-bell fa-fw " style="color: rgb(44, 160, 137);"></i>
      <!-- Counter - Alerts -->
      <span class="badge badge-danger badge-counter">{{emer.length}}</span>
    </a>
    <!-- Dropdown - Alerts -->
    <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="alertsDropdown">
      <h6 class="dropdown-header">
        Centro de alertas
      </h6>
      {{#each  emer}}
      <a class="dropdown-item d-flex align-items-center" href="/edit/{{id}}">
        <div class="mr-3">
          <div class="icon-circle bg-primary">
            <i class="fas fa-file-alt text-white"></i>
          </div>
        </div>
        <div>
          <div class="small text-gray-500">{{namep}}</div>
          <span class="font-weight-bold">A solicitado ayuda {{phone}}</span>
        </div>
      </a>
      {{else}}
      {{/each}}
  </nav> 

{{else}}
  {{#if users}}
    <nav class="navbar navbar-expand-sm bg-light navbar-light">
      <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/port/port">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbar-right" href="/logout">Logout</a>
          </li>
      </ul>
    </nav>
  {{else}}
     <nav class="navbar navbar-expand-sm bg-light navbar-light">
      <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbar-right" href="/login ">Login</a>
          </li>
      </ul>
